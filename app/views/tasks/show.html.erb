<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<div class="tasks">
<% if @task.completed == true %>
<input type="checkbox" checked> <p>This task is completed </p>
<% else %>
<input type="checkbox"> <p>This task is not completed yet</p>
<% end %>
</div>
<%= link_to "back to list", home_path %>
<%= link_to "Edit Task", edit_task_path(@task) %>